<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/img_avatar_hh"
            android:layout_gravity="center"
            android:onClick="img_avatar_click"
            android:layout_width="110dp"
            android:layout_height="110dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/avatar"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar">
                </de.hdodenhof.circleimageview.CircleImageView>
        </LinearLayout>

        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/edt_ten_ttnd"
            android:layout_marginTop="10dp"
            android:background="#DFF9FC"
            android:textColor="#3F51B5"
            android:hint="Họ và tên"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:id="@+id/edt_email_ttnd"
            android:layout_marginTop="10dp"
            android:background="#DFF9FC"
            android:textColor="#3F51B5"
            android:hint="Email ID"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:background="#DFF9FC"
            android:paddingLeft="10dp"
            android:id="@+id/edt_sdt_ttnd"
            android:layout_marginTop="10dp"
            android:textColor="#3F51B5"
            android:hint="SDT"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/edt_diachi_ttnd"
            android:layout_marginTop="10dp"
            android:background="#DFF9FC"
            android:textColor="#3F51B5"
            android:hint="Địa chỉ"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="#DFF9FC"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RadioButton
                android:textSize="20dp"
                android:text="Nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:text="Nữ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:background="@drawable/btn_thanhtoan"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:id="@+id/btn_luu_ttnd"
                android:layout_marginTop="10dp"
                android:text="Lưu"
                android:layout_width="120dp"
                android:layout_height="50dp"/>
            <Button
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_thanhtoan"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:id="@+id/btn_huy_ttnd"
                android:layout_marginTop="10dp"
                android:text="Hủy"
                android:layout_width="120dp"
                android:layout_height="50dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>