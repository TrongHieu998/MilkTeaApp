<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:background="@drawable/background_nguoidung"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:id="@+id/txt_diemtichluy"
                android:text="Điểm tích lũy hiện tại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFC107"
                android:paddingLeft="10dp"
                android:layout_below="@id/txt_diemtichluy"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="5.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_donhang"
                android:layout_width="50dp"
                android:layout_height="60dp" />
            <ImageView
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_star"
                android:layout_width="50dp"
                android:layout_height="60dp" />
            <ImageView
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_doithuong"
                android:layout_width="50dp"
                android:layout_height="60dp" />
            <ImageView
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_voucher"
                android:layout_width="50dp"
                android:layout_height="60dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="270dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:paddingTop="15dp"
                android:text="Lịch sử điểm thưởng"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
            <TextView
                android:textSize="20sp"
                android:paddingTop="15dp"
                android:text="Cách tích lũy điểm thưởng"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
            <TextView
                android:textSize="20sp"
                android:text="Đổi điểm thưởng"
                android:layout_marginTop="5dp"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
            <TextView
                android:textSize="20sp"
                android:text="E-voucher"
                android:layout_marginTop="5dp"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgV_DT1"
                android:layout_marginTop="22dp"
                android:background="@drawable/next"
                android:layout_width="30dp"
                android:layout_height="25dp"/>
            <ImageView
                android:id="@+id/imgV_DT2"
                android:layout_marginTop="40dp"
                android:background="@drawable/next"
                android:layout_width="30dp"
                android:layout_height="25dp"/>
            <ImageView
                android:id="@+id/imgV_DT3"
                android:layout_marginTop="40dp"
                android:background="@drawable/next"
                android:layout_width="30dp"
                android:layout_height="25dp"/>
            <ImageView
                android:id="@+id/imgV_DT4"
                android:layout_marginTop="40dp"
                android:background="@drawable/next"
                android:layout_width="30dp"
                android:layout_height="25dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>